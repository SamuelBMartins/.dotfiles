// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "(VimControl && !menu)",
    "bindings": {
      "space r n": "editor::Rename",
      "space o": "outline::Toggle",
      "space f": "editor::Format",
      "space t": "tab_switcher::Toggle",
      "space s f": ["file_finder::Toggle", {}],
      "space s g": "pane::DeploySearch",
      "space b b": "editor::ToggleBreakpoint",
    },
  },
  {
    "context": "VimControl && !menu && vim_mode != operator",
    "bindings": {
      "w": "vim::NextSubwordStart",
      "b": "vim::PreviousSubwordStart",
      "e": "vim::NextSubwordEnd",
      "g e": "vim::PreviousSubwordEnd",
    },
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !VimObject",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "] ]": "vim::NextMethodStart",
      "[ [": "vim::PreviousMethodStart",
    },
  },
  {
    "context": "(ProjectPanel && not_editing) || Dock",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-n": "project_panel::ToggleFocus",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-/": "workspace::ToggleBottomDock",
    },
  },
  {
    "context": "Workspace || Editor",
    "bindings": {
      "ctrl-/": "terminal_panel::ToggleFocus",
    },
  },
  {
    "context": "",
    "bindings": {
      "ctrl-o": "pane::GoBack",
    },
  },
  {
    "context": "(((((((((((AgentPanel || GitPanel) || ProjectPanel) || CollabPanel) || OutlinePanel) || ChatPanel) || VimControl) || EmptyPane) || SharedScreen) || MarkdownPreview) || KeyContextView) || DebugPanel)",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
    },
  },
]
