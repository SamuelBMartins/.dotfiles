// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "codex": {
      "default_mode": "full-access",
    },
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "vim": {
    "gdefault": true,
  },
  "disable_ai": false,
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark",
    "dark": "One Dark",
  },
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "title_bar": {
    "show_sign_in": false,
  },
  "tab_bar": {
    "show": false,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "restore_on_startup": "launchpad",
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "auto_install_extensions": {
    "java": true,
    "dockerfile": true,
  },
  "languages": {
    "Java": {
      "format_on_save": "off",
      "wrap_guides": [100],
      "formatter": [
        {
          "code_action": "source.organizeImports",
        },
        "language_server",
      ],
    },
  },
  "lsp": {
    "jdtls": {
      "settings": {
        "java_home": "/etc/alternatives/jre",
        "lombok_support": true,
      },
    },
  },
}
